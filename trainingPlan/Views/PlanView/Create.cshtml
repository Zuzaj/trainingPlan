@model trainingPlan.Models.PlanView

@{
    ViewData["Title"] = "Create";
}

<h1>Create Plan</h1>

<h4>PlanView</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="WeekStart" class="control-label"></label>
                <input asp-for="WeekStart" class="form-control" />
                <span asp-validation-for="WeekStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <textarea asp-for="Comments" class="form-control"></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingIds" class="control-label">Select Trainings</label>
                <select asp-for="TrainingIds" class="form-control" asp-items="ViewBag.Trainings" multiple></select>
                <span asp-validation-for="TrainingIds" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Create</button>
        </form>

    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

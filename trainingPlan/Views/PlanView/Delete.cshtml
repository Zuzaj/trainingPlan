@model trainingPlan.Models.PlanView

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Plan</h1>

<h4>Are you sure you want to delete this?</h4>
<hr />
<div>
    <h4>PlanView</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WeekStart)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WeekStart)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalDuration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalDuration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comments)
        </dd>
        <dt class="col-sm-2">
            Trainings
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var training in Model.Trainings)
                {
                    <li>@training.Name (@training.Duration min)</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</form>

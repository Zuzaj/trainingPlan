@model trainingPlan.Models.Training
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Training</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration" class="control-label"></label>
        <input asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DifficultyId" class="control-label">Difficulty</label>
        <select asp-for="DifficultyId" class="form-control">
            <option value="">Select Difficulty</option>
            @foreach (var difficulty in ViewBag.Difficulties as List<trainingPlan.Models.Difficulty>)
            {
                <option value="@difficulty.Id">@difficulty.Name</option>
            }
        </select>
        <span asp-validation-for="DifficultyId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TrainingTypeId" class="control-label">Training Type</label>
        <select asp-for="TrainingTypeId" class="form-control">
            <option value="">Select Training Type</option>
            @foreach (var trainingType in ViewBag.TrainingTypes as List<trainingPlan.Models.TrainingType>)
            {
                <option value="@trainingType.Id">@trainingType.Name</option>
            }
        </select>
        <span asp-validation-for="TrainingTypeId" class="text-danger"></span>
    </div>


    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
